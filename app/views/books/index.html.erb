<% if !user_signed_in? %>
 <div class="jumbotron">
   <h1>Favourite Books Reviewed</h1>
    <p>Incredible, insightful.</p>
     <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
 </div>
<% end %>
<div class="row">
 <% @books.each do |book| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag book.image.url(:medium), class: 'image'), book %>

    </div>
  </div>
  <% end %>
</div>
